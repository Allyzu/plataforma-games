generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             Int       @id @default(autoincrement())
  nome           String
  email          String    @unique
  senha          String
  criadoEm       DateTime  @default(now())
  atualizadoEm   DateTime  @updatedAt

  // Relação: um usuário pode jogar várias partidas do Akinator
  partidas       PartidaAkinator[]
}

model PartidaAkinator {
  id             Int       @id @default(autoincrement())
  usuarioId      Int
  status         String    @default("em_andamento") // em_andamento | finalizada
  criadoEm       DateTime  @default(now())
  atualizadoEm   DateTime  @updatedAt

  usuario        Usuario   @relation(fields: [usuarioId], references: [id])
  respostas      RespostaAkinator[]
}

model PerguntaAkinator {
  id             Int       @id @default(autoincrement())
  texto          String
  criadoEm       DateTime  @default(now())
  respostas  RespostaAkinator[]
}

model RespostaAkinator {
  id             Int       @id @default(autoincrement())
  partidaId      Int
  perguntaId     Int
  resposta       String    // "sim", "não", "não sei"
  criadoEm       DateTime  @default(now())

  partida        PartidaAkinator @relation(fields: [partidaId], references: [id])
  pergunta       PerguntaAkinator @relation(fields: [perguntaId], references: [id])
}



